{% extends base_generic %}

{% block content %}

<h1>Configuration</h1>

<ul>
 <li>Directory: {{directory}} Size: {{database_size_bytes}} bytes, {{database_size_kbytes}} kbytes, {{database_size_mbytes}} mbytes</li>
 <li>Version: {{version}}</li>
 <li>{{server_path}}</li>
</ul>

<h1>Queues</h1>
<ul>
    {% for thread in thread_list %}
       <li>{{ thread.get_thread_name }}: Queue Size: {{thread.get_queue_size}} Current processing: {{ thread.get_process_item }}</li>
    {% endfor %}
</ul>

<h1>Advanced</h1>
<ul>
  <li><a href="{% url 'rsshistory:importsources' %}">Import sources</a></li>
  <li><a href="{% url 'rsshistory:importentries' %}">Import entries</a></li>
  <li><a href="{% url 'rsshistory:exportsources' %}">Export sources</a></li>
  <li><a href="{% url 'rsshistory:exportentries' %}">Export entries</a></li>
  <li><a href="{% url 'rsshistory:removeallsources' %}">Remove all sources</a></li>
</ul>

<h1>Config</h1>

<form action="{{config_form.action_url}}" method="{{config_form.method}}">
     {% csrf_token %}
     {{config_form}}
     <input type="submit" value="Submit">
</form>

<h1>Server log file</h1>
<pre>
{{server_log_data}}
</pre>

{% endblock %}
